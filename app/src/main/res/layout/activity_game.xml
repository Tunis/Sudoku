        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>

        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>
        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>
        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>

        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>
        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>
        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>

        <Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/><Button android:minWidth="0dp" app:layout_columnWeight="1"/>
